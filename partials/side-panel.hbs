<header class="panel-cover panel-cover--collapsed" {{#if @site.cover_image}}style="background-image: url({{@site.cover_image}})"{{/if}}>
  <div class="panel-main">

    <div class="panel-main__inner panel-inverted">
    <div class="panel-main__content">

        {{#if @site.logo}}
        <a href="{{@site.url}}" title="前往 {{@site.title}} 的主页"><img src="{{@site.logo}}" width="80" alt="{{@site.title}} logo" class="panel-cover__logo logo" /></a>
        {{/if}}
        <h1 class="panel-cover__title panel-title"><a href="{{@site.url}}" title="前往 {{@site.title}} 的主页">{{@site.title}}</a></h1>
        <hr class="panel-cover__divider" />
        <p class="panel-cover__description">{{@site.description}}</p>
        <hr class="panel-cover__divider panel-cover__divider--secondary" />

        <div class="navigation-wrapper">
          <div>
           {{> navigation}}
          </div>
          <div>
          {{> social}}
          </div>
        </div>

      </div>

    </div>

    <div class="panel-cover--overlay cover-blue"></div>
  </div>
</header>
