{{!< default}}
{{#post}}
  <article class="archives">
    <section class="archives-content">
      <span class="archives-total">
        {{#get "posts" as |posts postPages|}}
          <strong>
            {{t 'Now we have {total} posts.' total=postPages.total}}
          </strong>
        {{/get}}
      </span>
      {{#get "posts" limit="all" order="published_at desc"}}
        {{#foreach posts}}
          <div class="archives-item" date="{{date format="YYYY"}}">
            <div class="archives-info">
              <div class="archives-info-meta">
                <a href="{{url}}">
                  <i class="iconfont icon-calendar" aria-hidden="true"></i>
                  <time class="archives-date" datetime="{{date published_at format="MM-DD"}}">{{date
                    published_at format="MM-DD"}}</time>
                  {{title}}
                </a>
              </div>
            </div>
          </div>
        {{/foreach}}
      {{/get}}
    </section>
  </article>
  {{> comment }}
  <script src="{{asset 'js/page-archives.js'}}"></script>
{{/post}}
