{{!< default}}

<div class="main-post-list">

  <ol class="post-list">
    {{#foreach posts}}
      <li class="infinite-post-feed">
        <h2 class="post-list__post-title post-title"><a href="{{url}}"
                                                        title="link to {{{title}}}">{{{title}}}</a></h2>
        <p class="excerpt">{{excerpt characters="250"}}&hellip;</p>
        <div class="post-list__meta">
          <time datetime="{{date format="YYYY MMM DD"}}" class="post-list__meta--date date">{{date
            format="YYYY MMM DD"}}</time> &#8226; <span
          class="post-list__meta--tags tags">{{tags}}</span><a class="btn-border-small" href={{url}}>{{t
          'Read More'}}</a></div>
        <hr class="post-list__divider"/>
      </li>
    {{/foreach}}
  </ol>

  {{pagination}}

</div>

<script src="{{asset 'js/index.js'}}"></script>
